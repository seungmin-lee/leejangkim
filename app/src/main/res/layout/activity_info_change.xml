<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoChangeActivity"
    android:background="@drawable/back15"
    android:id="@+id/infochange_main_view"
   >

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="30dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/close"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디  "
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seungmin "
                android:textColor="@color/textcolor"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이승민 "
                android:textColor="@color/textcolor"
                android:background="@null"
                android:textSize="25dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 번호"
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-3099-8902 "
                android:background="@null"
                android:textColor="@color/textcolor"
                android:textSize="25dp"
                android:inputType="phone"
                android:maxLength="13"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자 번호"
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/et_helper_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-3099-8902"
                android:background="@null"
                android:inputType="phone"
                android:textColor="@color/textcolor"
                android:textSize="25dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특이사항"
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/et_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:background="@null"
                android:textColor="@color/textcolor"
                android:textSize="25dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textColor="@color/textcolor"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/img_line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/et_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26세 "
                android:background="@null"
                android:textColor="@color/textcolor"
                android:textSize="25dp"
                android:inputType="number"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_change_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/click_edittext"/>
            <Button
                android:id="@+id/btn_change_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하기"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/click_edittext"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="                   "/>


    </LinearLayout>



</ScrollView>