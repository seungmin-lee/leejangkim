<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/menu_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_addr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/click_edittext" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_addr"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_ser"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="34dp"
                android:background="@drawable/click_edittext"
                android:text="검색" />

            <Button
                android:id="@+id/btn_ser2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="84dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/btn_ser"
                android:background="@drawable/click_edittext"
                android:text="지도 중심 검색" />

            <Button
                android:id="@+id/btn_pos"
                android:layout_width="44dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="1dp"
                android:background="@drawable/gps_nonclick" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_search_bar"
   ></RelativeLayout>



    <RelativeLayout

        android:id="@+id/layout_ani"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/mapAddrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="주소 :"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:background="@drawable/map_button"
            android:textColor="@color/textcolor"/>


        <Button
            android:id="@+id/btn_arrive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:background="@drawable/click_edittext"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>