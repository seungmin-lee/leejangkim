<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapview">

    </RelativeLayout>
    <EditText
        android:id="@+id/et_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_edittext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="내 위치 끄기"
        android:id="@+id/btn_pos"
        android:layout_below="@id/et_addr"
        android:background="@drawable/pos"/>

    <Button
        android:layout_below="@+id/et_addr"
        android:id="@+id/btn_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serch"
        android:layout_alignParentRight="true"

        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="여기에서 재검색"
        android:id="@+id/btn_ser2"
        android:layout_below="@+id/btn_ser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/click_edittext"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_ser3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@+id/btn_ser2"
        android:layout_alignParentRight="true"/>


    <RelativeLayout

        android:id="@+id/layout_ani"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/mapAddrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="주소 :"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:background="@drawable/map_button"
            android:textColor="@color/textcolor"/>


        <Button
            android:id="@+id/btn_arrive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:background="@drawable/click_edittext"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>