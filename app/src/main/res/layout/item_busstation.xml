<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_bus_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="#ff0000"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_bus_pos"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/bus_pos" />

            <TextView
                android:id="@+id/txt_bus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/img_turn_st"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/trunst"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경인교육대학교"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_station_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15000"
                    android:textSize="13dp"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="#7b7272"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_station_st_tm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15000"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/txt_station_ed_tm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15000"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>