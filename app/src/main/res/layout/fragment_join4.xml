<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back15"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"

        >

            <EditText
                android:id="@+id/et_input_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="특이사항 ex) 휠체어 / 목발 / 장애등급"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textColorHint="@color/texthintcolor"
                android:background="@drawable/nonclick_edittext"
                android:layout_gravity="left"
                android:padding="10dp"
                />


            <EditText
                android:id="@+id/et_input_age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="이용자 나이"
                android:textSize="20dp"
                android:singleLine="true"
                android:background="@drawable/nonclick_edittext"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/texthintcolor"
                android:layout_gravity="left"
                android:padding="10dp"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/txt_error_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="나이를 입력해주세요."
                android:textColor="@color/texterrorcolor"
                android:visibility="gone"/>

        </LinearLayout>



</RelativeLayout>