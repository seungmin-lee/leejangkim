<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity"
    android:background="@drawable/back15"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/close_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="My page"
            android:textColor="@color/textcolor"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_myinfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="내 정보"
            android:textSize="30dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:textColor="@color/textcolor"/>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@+id/txt_myinfo"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_change_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="내 정보변경"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/img_line"/>
        <TextView
            android:id="@+id/txt_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="로그아웃"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/txt_change_info"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="공지사항"
            android:textSize="30dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:textColor="@color/textcolor"/>

        <ImageView
            android:id="@+id/img_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@+id/txt_notice"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_notice2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="공지사항"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/img_line2"/>
        <TextView
            android:id="@+id/txt_direct_ques"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1:1 문의"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/txt_notice2"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_appinfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="앱 정보"
            android:textSize="30dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:textColor="@color/textcolor"/>

        <ImageView
            android:id="@+id/img_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@+id/txt_appinfo"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_reference"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="저작권"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/img_line3"/>
        <TextView
            android:id="@+id/txt_info_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="개발자 정보"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_below="@+id/txt_reference"/>


    </RelativeLayout>

</LinearLayout>